<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SIGPadaria" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>entidades.Mercadoria</class>
    <class>entidades.Funcionario</class>
    <class>entidades.TipoProduto</class>
    <class>entidades.ProdutoFabricado</class>
    <class>entidades.ProdutoSecundario</class>
    <class>entidades.Estoque</class>
    <class>entidades.Vendas</class>
    <class>entidades.VendasProdutoFabricado</class>
    <class>entidades.VendasProdutoSecundario</class>
    <class>entidades.VWProdutosFabricados</class>
    <class>entidades.VWProdutosSecundarios</class>
    <class>entidades.Historico</class>
    <class>entidades.VWEstoqueProdutosFabricados</class>
    <class>entidades.VWEstoqueProdutosSecundarios</class>
    <class>entidades.VWVendaProdutosFabricados</class>
    <class>entidades.VWVendaProdutosSecundarios</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sigpadaria"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="wilson"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
